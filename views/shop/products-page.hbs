<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-12 col-md-4">
        <div class="thumbnail">
            <!--Swap line 15 and 16 after resolving redirecting/id issue
            <a href="/go-to-product/{{this._id}}"> <img src="{{ this.imagePath }}" alt="..." class="img-responsive" id="thumbnailImg"> </a>-->
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive" id="thumbnailImg">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix" id="content-align">
                    <div class="price pull-left">${{ this.price }}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}